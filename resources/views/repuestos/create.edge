{{ style('style') }}
  
    <h1>repuestos</h1>
</head>
<body >
  <section>
      <form action="/repuesto" method="post">
            <label for="nombre">DESCRIPCION: </label><br>
          <input name="descripcion"type="text"><br>
          <label for="">COSTO UNITARIO: </label><br>
          <input name="costUnit"type="text"><br>
          <label for="">PRECIO UNITARIO: </label><br>
          <input name="precioUnit"type="text"><br>
          <label for="">IMPUESTO PARCIAL: </label><br>
          <input name="impParcial"type="text"><br>
          <label for="">HOJA DE PARTES: </label><br>
          <select class="custom-select" name="hoja_id">
                @each(hojaDeParte in hojaDePartes)
                    <option value={{hojaDeParte.id}}>{{hojaDeParte.nombre}}</option>
                @endeach
        </select>
        <label for="">MECANICO: </label><br>
        <select class="custom-select" name="hoja_mecanico_id">
                @each(mecanico in mecanicos)
                    <option value={{mecanico.id}}>{{mecanico.nombre}}</option>
                @endeach
        </select>
          <input class="waves-effect waves-light btn" type="submit" value= "AGREGAR"/>
      </form>
    </section>
    
      <script type="text/javascript" src="js/materialize.min.js"></script>
      
    </body>
    </body>
    </html>
    
